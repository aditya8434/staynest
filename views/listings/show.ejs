<% layout('layouts/boilerplate') %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<body>
    <h3 class="offset-1"><%= listing.title %></h3>
    <div class="row mt-4">
        <div class="col-8 offset-1">
            <div class="card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.image.filename %>">
                <!-- <div class="card-img-overlay"></div> -->
                <div class="card-body mt-4">
                    <!-- <h5 class="card-title"></h5> -->
                    <p class="card-text">&#8377 <%= listing.price.toLocaleString("en-IN") %> / night</p>
                    <p class="card-text">Owned By: <i><%= listing.author.username %></i></p> 
                    <p class="card-text"><%= listing.description %></p> 
                    <p class="card-text"><small class="text-muted">Location: <%= listing.location %>, <%= listing.country %></small></p>
                </div>
            </div>
        </div>
    </div>

    <% if(currentUser && currentUser._id.equals(listing.author._id)) { %>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-1 button">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-dark offset-2 button px-4" onclick="return confirm('Are you sure you want to delete this listing?');">
                Delete
            </button>
        </form>
    </div>  
    <% } %>

    
    <div class="col-8 offset-1 mt-4 mb-4">
        <hr>
        <% if(currentUser) { %>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
            

            <div class="mt-3">
            <label for="rating" class="form-label">Rating</label>   
            <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>

            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" rows="4" cols="50" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Please add some comments.
                </div>
            </div>
            <button type="submit" class="btn btn-dark mt-2 button">Submit Review</button>
        </form>
        <hr>
        <% } %>



        <p><b>Reviews</b></p>
        <% if (listing.reviews.length > 0) { %>
            <div class="row">
            <% listing.reviews.forEach(review => { %>
                <div class="card col-5 mb-3 ms-3">
                    <div class="card-body">
                        <h5 class="card-title mt-2"><%= review.author.username %></h5>
                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                        <p class="card-text mb-2"><%= review.comment %></p>
                    </div>
                    <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mb-2">
                            <button class="btn btn-sm button"><i class="fa-solid fa-trash"></i></button>
                        </form>
                    <% } %>
                </div>
            <% }); %>
            </div>
        <% } else { %>
            <p class="text-muted">No reviews yet.</p>
        <% } %>
    </div>


    <div class="col-8 offset-1 mt-4 mb-4">
        <hr>
        <h3 class="mb-4">Where you'll be</h3>
        <div id="map"></div>
        
    </div>

    <script src="/js/map.js"></script>
</body>
